<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Verification">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/verificationLayout1"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:singleLine="true"
                android:drawableStart="@drawable/ic_baseline_mail_outline_24"
                android:drawableTint="@color/blue"
                android:drawablePadding="10dp"
                android:id="@+id/verificationEmail"/>


        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/verificationLayout1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/red"
            android:id="@+id/verificationStatus"
            android:visibility="visible"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="165dp"
            android:layout_height="55dp"
            android:background="@drawable/login_bg"
            android:layout_below="@id/verificationStatus"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="SEND"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:id="@+id/verificationButton"/>

    </RelativeLayout>

</FrameLayout>