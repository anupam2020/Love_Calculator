<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sbdev.lovecalculator.LoveResultActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.075"
        android:background="@drawable/background" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_outline_share_24"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        app:tint="@color/black"
        android:id="@+id/loveResultShare"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:tint="@color/black"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/loveResultBack"/>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/couple_kiss"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/loveResultImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Love is in the air"
        android:textSize="40dp"
        android:fontFamily="@font/aladin"
        android:textColor="@color/red"
        android:id="@+id/loveResultText"
        android:layout_below="@id/loveResultImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/loveResultText"
        android:textSize="40dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/pink"
        android:fontFamily="@font/aladin"
        android:layout_marginLeft="15dp"
        android:id="@+id/loveResultName"
        android:layout_alignParentLeft="true"
        android:textAlignment="textStart"/>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/heart_arrow"
        android:layout_centerHorizontal="true"
        android:id="@+id/loveResultImage2"
        android:layout_below="@+id/loveResultName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/loveResultImage2"
        android:textSize="40dp"
        android:textColor="@color/pink"
        android:fontFamily="@font/aladin"
        android:layout_marginRight="15dp"
        android:id="@+id/loveResultPartner"
        android:layout_alignParentRight="true"
        android:textAlignment="textEnd"/>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@+id/loveResultPartner"
        android:layout_centerHorizontal="true"
        android:id="@+id/loveResultRelative1"
        android:background="@drawable/love_wings1"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/loveResultPercentage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/aladin"
            android:text=""
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/loveResultRelative1"
        android:textSize="25dp"
        android:textColor="@color/pink"
        android:fontFamily="@font/aladin"
        android:id="@+id/loveResult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/loveResultRelative2"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/calculate_bg">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_favorite_border_24"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            app:tint="@color/white"
            android:id="@+id/loveResultLoveImg1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate Again"
            android:layout_centerInParent="true"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:fontFamily="@font/aladin"
            android:id="@+id/loveResultAgain"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_favorite_border_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            app:tint="@color/white"
            android:id="@+id/loveResultLoveImg2" />



    </RelativeLayout>


</RelativeLayout>